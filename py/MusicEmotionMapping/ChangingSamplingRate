SR= 44100
#TODO: colab sample rate default = 22050 --> LAVORIAMO SU SAMPLE PIU' PICCOLI? RESAMPLIAMO? 


#Set the path of the audio file
audio_path="/content/Audio_Chopin.wav"
audio, native_SR = librosa.load("/content/Audio_Chopin.wav", sr= None)
nativeSampleRate= librosa.get_samplerate(audio_path)

print("SampleRate of the loaded track: ", nativeSampleRate)

#checking for the correct samplingRate

if (native_SR!=SR):
  audio = librosa.resample(audio, native_SR, SR)
  sf.write("resampled_track.wav", audio, SR)
  audio_path="/content/resampled_track.wav"
  print("This is the new sample rate: ", librosa.get_samplerate(audio_path))
